# Production Environment Configuration
# Cấu hình môi trường Production cho Backend

# Server settings
HOST=0.0.0.0
PORT=8000
ENVIRONMENT=production

# Database settings
DATABASE_URL=postgresql://user:password@localhost/minhha_db
DATABASE_ECHO=false

# CORS settings - Chỉ cho phép domains cụ thể trong production
CORS_ORIGINS=["https://minhha.com","https://www.minhha.com","https://admin.minhha.com"]

# JWT settings
JWT_SECRET_KEY=your-production-super-secret-jwt-key-must-be-very-long-and-secure
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# File upload settings
UPLOAD_DIR=/var/www/static/uploads
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_EXTENSIONS=["jpg","jpeg","png","gif","webp"]

# Admin settings
ADMIN_EMAIL=admin@minhha.com
ADMIN_PASSWORD=change-this-in-production

# Store info
STORE_NAME=Cửa Hàng Minh Hà
STORE_HOTLINE=0974.876.168
STORE_ADDRESS=417 Ngô Gia Tự, Hải An, Hải Phòng